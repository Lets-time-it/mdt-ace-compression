{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules"]
}